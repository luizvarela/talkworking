<%= form_for(@project) do |f| %>
  
  <%= content_tag(:div, content_tag(:span,  @project.errors.full_messages.to_sentence, :id => 'project-errors-message'), :class => 'alert alert-error') if @project.errors.any?%>

<div class='project-create-primary-div'>
  <div class="field">
    <%= f.text_field :title, :placeholder => I18n.t("projects.fields.title"), :style => 'width:350px;' %>
  </div>
  <div class="field">
    <%= f.text_area :description, :rows => 5, :placeholder => I18n.t("projects.fields.description"), :style => 'width:350px;'  %>
  </div>
  <div class="form-actions" style='margin-top:20px;'>
    <%= f.submit I18n.t("projects.fields.save"), :class => 'btn btn-primary'%>
  </div>
</div>
<div class='project-create-second-div'>
  <h3><%= I18n.t("projects.labels.invite")%></h3>
  <hr/>
  <div class="field">
    <%= image_tag '/invite.png'%>
	<%= text_field_tag 'users[]', nil, :placeholder => I18n.t("projects.fields.email"), :style => 'width:350px' %>
  </div>  
  <div class="field">
    <%= image_tag '/invite.png'%>
    <%= text_field_tag 'users[]', nil, :placeholder => I18n.t("projects.fields.email"), :style => 'width:350px;' %>
  </div>
