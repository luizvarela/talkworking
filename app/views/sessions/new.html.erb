<%= form_tag session_path,:id => 'login-form' do %>
	<div class='field'>
		<%= text_field_tag :email, nil,  :placeholder => I18n.t('sessions.fields.email')%>
	</div>
	<div class='field'>
		<%= password_field_tag :password, nil, :placeholder => I18n.t('sessions.fields.password')%>
	</div>
	<div class='actions'>
		<%= submit_tag I18n.t('sessions.fields.login'), :class => 'btn btn-primary'%>
		<%= link_to I18n.t('sessions.fields.not_registered'), '#', :class => 'btn btn-info', :onclick=> "$('#modalPage').modal();"%>
	</div>
<%end %>

<div class="modal hide fade" id="modalPage" style='padding:10px;'>
	<%=render 'users/new'%>
</div>