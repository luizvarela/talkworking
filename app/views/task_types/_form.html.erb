<%= form_for([@project,@task_type], :remote => true) do |f| %>

  <%= content_tag(:div, content_tag(:span,  @task_type.errors.full_messages.to_sentence, :id => 'task-type-errors-message'), :class => 'alert alert-error hide', :id => 'task-type-errors-div')%>

  <div class="field">
	 <%= f.text_field :title, :placeholder => I18n.t("columns.fields.title"), :style => 'width:350px;' %>
  </div>
  <div class="field">
    <%= colorpicker_tag :task_type, :color, :placeholder => I18n.t("columns.fields.color"), :style => 'width:60px;', :value => @task_type.color %>
  </div>
  <div class="form-actions">
    <%= f.submit I18n.t("tasktypes.fields.save"), :class => 'btn btn-primary'%>
    <%= content_tag :button, I18n.t("tasktypes.fields.cancel"), :class => 'btn btn-info', :onclick => "$('#modalPage').modal('hide');return false;" %>
  </div>
<% end %>
