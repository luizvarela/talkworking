<%= form_for(@suggestion) do |f| %>
  <%= content_tag(:div, content_tag(:span,  @suggestion.errors.full_messages.to_sentence, :id => 'project-errors-message'), :class => 'alert alert-error') if @suggestion.errors.any?%>

  <div class="field">
    <%= f.text_area :body, :rows => 5, :style => 'width:350px;', :placeholder => I18n.t("suggestions.fields.body") %>
  </div>
  <div class="actions">
    <%= f.submit t("suggestions.labels.save"), :class => 'btn btn-success' %>
  </div>
<% end %>
